<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <ImageView
            android:layout_width="40dp"
            android:layout_height="0dp" app:srcCompat="@drawable/profiluser"
            android:id="@+id/imageView16"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="16dp"/>
    <TextView
            android:text="name"
            android:textColor="@android:color/black"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView51" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@+id/imageView16" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"/>
    <TextView
            android:text="commentaire"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView52" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView51" android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@+id/imageView16" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView54" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView52" android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@+id/imageView16" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
    />
</android.support.constraint.ConstraintLayout>